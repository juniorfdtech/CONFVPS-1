#!/bin/bash
#cores
cor="\033[1;30m"
corr="\033[1;33m"
corPadrao="\033[0m"
preto="\033[0;30m"
vermelho="\033[0;31m"
verde="\033[0;32m"
amarelo="\033[0;33m"
azul="\033[0;34m"
purple="\033[0;35m"
cyan="\033[0;36m"
cinzaa="\033[0;37m"
pretoCinza="\033[1;30m"
vermelhoo="\033[1;31m"
verdee="\033[1;32m"
amareloo="\033[1;33m"
azull="\033[4;34m"
rosa="\033[1;35m"
cyann="\033[2;36m"
branco="\033[1;37m"
cyann="\033[2;36m"
# BY: Glemysson
clear
echo -e "\033[0m                 \033[47;30m CONFVPS 2.0 MENU \033[0m"
echo "  "
echo -e ""$branco"  ================================================="
echo -e "$amareloo            CRIADOR: @GLEMYSSON_OFICIAL"
echo -e "            Versao: 4.4.4 Official"
echo -e "            Data de criação: 06/02/2107"
echo -e "            Data de atualização: 17/02/217"
echo -e "            Nome: CONFVPS 2.0"
echo -e ""$branco"  ================================================="
echo -e "$verdee"
read -p "   De enter para continuar..."
clear
echo -e "\033[0m               \033[47;30m ESCOLHA UMA OPCAO \033[0m" 
echo " "
echo " "
echo -e "\033[1;33m
1]$vermelhoo CONFIGURAR VPS \033[1;30m(Configurar vps para rodar squid3)\033[1;33m

2]$vermelhoo CRIAR USUARIOS \033[1;30m(Crie usuarios sem acesso ao shell e com data de validade)\033[1;33m

3]$vermelhoo LIMITAR USUARIO \033[1;30m(Aplique limite de conexões simuntaneo a um usuario)\033[1;33m

4]$vermelhoo DELETAR USUARIO \033[1;30m(Delete usuarios inulteis)\033[1;33m

5]$vermelhoo MONITOR SSH \033[1;30m(Monitorar Usuarios conectados a vps)\033[1;33m

6]$vermelhoo ADDHOST \033[1;30m(Adicione hosts ao squid)\033[1;33m

7]$vermelhoo REMOVER CONFVPS 2.0 \033[1;30m(Remova o CONFVPS 2.0 de seu servidor vps)\033[1;33m

8]$vermelhoo BANNER \033[1;30m(Adicione ou exclua banner em seu servidor VPS)\033[1;33m"

9]$vermelhoo SAIR \033[1;30m(Sair do menu do CONFVPS)\033[1;33m"
echo " "

echo "Escolha uma opcão";read -p ": " opcao3
clear
if [ "$opcao3" = "1" ]
then
sudo squid3-installer
fi

if [ "$opcao3" = "2" ]
then
sudo create-user
fi

if [ "$opcao3" = "3" ]
then
read -p "QUAL NOME DE USUARIO? : " user
read -p "QUAL O NUMERO DE LIMITE? : " lim
sudo limite $user $lim
fi

if [ "$opcao3" = "4" ]
then
sudo user-del
fi

if [ "$opcao3" = "5" ]
then
sudo monitor
fi

if [ "$opcao3" = "6" ]
then
sudo addhost
fi
if [ "$opcao3" = "7" ]
then
read -p "Remover? [s/n] : " -e -i n seila
if [ "$seila" = "n" ]
then
exit
fi

if [ "$seila" = "s" ]
then
  echo " Removendo CONFVPS 2.0..."
  rm /bin/CONFVPS
  rm /bin/addhost
  rm /bin/squid3-installer
  rm /bin/installer-dropbear
  rm /bin/create-user
  rm /bin/limite
  rm /bin/monitor
  rm /bin/user-del
  rm installer
  sleep 2
  echo -e "O CONFVPS 2.0 Foi removido com sucesso!"
  sleep 2
  echo " Saindo..."
  sleep 2
  exit
   fi
fi

if [ "$opcao3" = "9" ]
then
sudo banner
fi

if [ "$opcao3" = "9" ]
then
echo "Saindo..."
sleep 2
fi