#!/bin/bash
#cores
cor="\033[1;30m"
corr="\033[1;33m"
corPadrao="\033[0m"
preto="\033[0;30m"
vermelho="\033[0;31m"
verde="\033[0;32m"
amarelo="\033[0;33m"
azul="\033[0;34m"
purple="\033[0;35m"
cyan="\033[0;36m"
cinzaa="\033[0;37m"
pretoCinza="\033[1;30m"
vermelhoo="\033[1;31m"
verdee="\033[1;32m"
amareloo="\033[1;33m"
azull="\033[4;34m"
rosa="\033[1;35m"
cyann="\033[2;36m"
branco="\033[1;37m"
cyann="\033[2;36m"
# BY: Glemysson
clear
echo -e "\033[0m                 \033[47;30m CONFVPS 2.0 MENU \033[0m"
echo "  "
echo -e ""$branco"  <===============================================>"
echo -e "$amareloo                CRIADOR: @GLEMYSSON_OFICIAL"
echo -e "    ==>      Versao: 4.4.7 Official            <=="
echo -e "    ==>      Data de criação: 06/02/2107       <=="
echo -e "    ==>      Data de atualização: 23/02/21     <=="
echo -e "    ==>      Nome: CONFVPS 2.0                 <=="
echo -e ""$branco"  <===============================================>"
echo -e "$verdee"
read -p "Continuar..."
clear
echo -e "\033[0m                        \033[47;30mESCOLHA UMA OPCAO \033[0m" 
echo -e ""
echo -e "\033[1;33m
\033[1;37m[\033[1;32m 1 \033[1;37m]$vermelhoo CONFIGURAR VPS \033[1;30m\033[1;33m
\033[1;37m[\033[1;32m 2 \033[1;37m]$vermelhoo CRIAR USUARIOS \033[1;30m\033[1;33m
\033[1;37m[\033[1;32m 3 \033[1;37m]$vermelhoo DELETAR USUARIO \033[1;30m\033[1;33m
\033[1;37m[\033[1;32m 4 \033[1;37m]$vermelhoo MONITOR SSH \033[1;30m\033[1;33m
\033[1;37m[\033[1;32m 5 \033[1;37m]$vermelhoo ADDHOST \033[1;30m\033[1;33m
\033[1;37m[\033[1;32m 6 \033[1;37m]$vermelhoo REMOVER CONFVPS 2.0 \033[1;30m\033[1;33m
\033[1;37m[\033[1;32m 7 \033[1;37m]$vermelhoo BANNER \033[1;30m\033[1;33m"
echo -e "\033[1;37m[\033[1;32m 8 \033[1;37m]$vermelhoo SAIR \033[1;30m\033[1;33m"
echo -e ""$cyann
echo "Escolha uma opcão";read -p ": " opcao3
clear
if [ "$opcao3" = "1" ]
then
squid3-installer
fi

if [ "$opcao3" = "2" ]
then
create-user
fi

if [ "$opcao3" = "3" ]
then
user-del
fi

if [ "$opcao3" = "4" ]
then
monitor
fi

if [ "$opcao3" = "5" ]
then
addhost
fi
if [ "$opcao3" = "6" ]
then
read -p "Remover? [s/n] : " -e -i n seila
if [ "$seila" = "n" ]
then
exit
fi

if [ "$seila" = "s" ]
then
  echo " Removendo CONFVPS 2.0..."
  rm /bin/CONFVPS
  rm /bin/addhost
  rm /bin/squid3-installer
  rm /bin/create-user
  rm /bin/limite
  rm /bin/monitor
  rm /bin/banner
  rm /bin/user-del
  rm installer.sh
  sleep 2
  echo -e "O CONFVPS 2.0 Foi removido com sucesso!"
  sleep 2
  echo " Saindo..."
  sleep 2
  exit
   fi
fi

if [ "$opcao3" = "7" ]
then
banner
fi

if [ "$opcao3" = "8" ]
then
echo "Saindo..."
sleep 2
fi
